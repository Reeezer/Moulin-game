<UserControl x:Class="Ticket_to_ride.View.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Ticket_to_ride.View"
             xmlns:viewmodels="clr-namespace:Ticket_to_ride.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodels:GameViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Cards to pick up -->

        <!-- Center pane -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 24 0 24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!-- Player informations -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Stretch">
                    <TextBlock HorizontalAlignment="Center" FontSize="20" Text="{Binding CurrentPlayer.Name}"/>
                    <TextBlock HorizontalAlignment="Center" FontSize="16" Text="{Binding CurrentPlayer.Color}"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0 12 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Score:" Margin="0 0 8 0"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentPlayer.Score}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Remaining trains:" Margin="0 0 8 0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentPlayer.RemainingTrains}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Goal cards:" Margin="0 0 8 0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="TODO"/>
                </Grid>
            </Grid>
            
            <!-- Board -->
            <Grid Grid.Column="1" Margin="24 0 24 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Button
                    Grid.Row="0"
                    Content="Turn"
                    Command="{Binding NextTurnCommand}"
                    Margin="0 24 0 0"/>
            </Grid>

            <!-- Players summaries -->
            <ListView Grid.Column="2" ItemsSource="{Binding Players}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Color" DisplayMemberBinding="{Binding Color}" />
                        <GridViewColumn Header="Score" DisplayMemberBinding="{Binding Score}" />
                        <GridViewColumn Header="Trains" DisplayMemberBinding="{Binding RemainingTrains}" />
                        <GridViewColumn Header="Cards" DisplayMemberBinding="{Binding Hand.Count}" />
                        <GridViewColumn Header="Goals" DisplayMemberBinding="{Binding GoalCards.Count}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <!-- Hand cards -->

    </Grid>
</UserControl>
